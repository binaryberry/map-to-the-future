<div class="tabs-ui">
  <div class="tab">
    <input type="radio" id="title" name="tab-group" checked="true" />
    <label for='title'>Event</label>
    <div class="content">
      <h1>{{title}}</h1>
      <h2>{{startdate}}</h2>
      <p>{{short_description}}</p>
    </div>
  </div>
  <div class="tab">
    <input type="radio" id="linked-events" name="tab-group" />
    <label for='title'>Linked Events</label>
    <div class="content">
      <ul>
        {{#each events}}
        <li>{{link}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
